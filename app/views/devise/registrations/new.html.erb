<div class="big-contain">
<h2 class="center">Sign up</h2>

 <div class="contain1">
 <%= form_for(resource, as:resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="avatar_field">
      <%= f.file_field :avatar %>
    </div>
<div class="mb-3 mt-3">
  <%= f.text_field :name, class: "form-controll", placeholder: "Enter your username" %>
</div>
<div class="mb-3">

  <%= f.email_field :email, class: "form-controll",placeholder: "Enter your email" %>
</div>
<div class="mb-3">
  <%= f.password_field :password, class: "form-controll",placeholder: "Enter password",autocomplete: "new-password" %>
</div>

<div class="mb-3">
 <%= f.password_field :password_confirmation, placeholder: "Re-enter password", autocomplete: "new-password", class: "form-controll" %>
</div>
<%= f.submit "Signup" , class: "blah" %> 
<% end %>
</div>
</div>